@page
@model Account.RegisterModel
@inject IOptions<ConfigModel> Options
@{
  Layout = null;
}

<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <title>@ViewData["Title"] - AdminProj</title>
  @await Html.PartialAsync("Partials/Styles")
  @await Html.PartialAsync("Partials/Jquery")
</head>
<body class="signup-page">
  <div class="signup-box">
    <div class="logo">
      <a href="javascript:void(0);">@Options.Value.TituloSistema</a>
      <small>Admin BootStrap Based - Material Design</small>
    </div>
    <div class="card">
      <div class="body">
        <form id="sign_up" asp-route-returnUrl="@Model.ReturnUrl" method="post">
          <div class="msg">Register a new membership</div>
          <div asp-validation-summary="All" class="text-danger"></div>
          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">person</i>
            </span>
            <div class="form-line">
              <label asp-for="Input.Firstname"></label>
              <input asp-for="Input.Firstname" class="form-control" autofocus />
              <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>
          </div>
          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">person</i>
            </span>
            <div class="form-line">
              <label asp-for="Input.Lastname"></label>
              <input asp-for="Input.Lastname" class="form-control" />
              <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>
          </div>
          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">email</i>
            </span>
            <div class="form-line">
              <label asp-for="Input.Email"></label>
              <input asp-for="Input.Email" class="form-control" />
              <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
          </div>
          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">lock</i>
            </span>
            <div class="form-line">
              <label asp-for="Input.Password"></label>
              <input asp-for="Input.Password" class="form-control" />
              <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
          </div>
          <div class="input-group">
            <span class="input-group-addon">
              <i class="material-icons">lock</i>
            </span>
            <div class="form-line">
              <label asp-for="Input.ConfirmPassword"></label>
              <input asp-for="Input.ConfirmPassword" class="form-control" />
              <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <input type="checkbox" name="terms" id="terms" class="filled-in chk-col-pink">
            <label for="terms">I read and agree to the <a href="#">terms of usage</a>.</label>
          </div>
          <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">SIGN UP</button>
          <div class="m-t-25 m-b--5 align-center">
            <a asp-page="./Login">You already have a membership?</a>
          </div>
        </form>
      </div>
    </div>
  </div>

  @await Html.PartialAsync("Partials/Scripts")
  @await Html.PartialAsync("Partials/ValidationScripts")
</body>
</html>